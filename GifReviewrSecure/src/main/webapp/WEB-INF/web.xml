<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AntiCsrfFilter</filter-name>
        <filter-class>ca.sait.gifreviewr.filters.AntiCsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AntiCsrfFilter</filter-name>
        <servlet-name>AddGifServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AntiCsrfFilter</filter-name>
        <servlet-name>GifServlet</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ca.sait.gifreviewr.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GifServlet</servlet-name>
        <servlet-class>ca.sait.gifreviewr.servlets.GifServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGifServlet</servlet-name>
        <servlet-class>ca.sait.gifreviewr.servlets.AddGifServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GifServlet</servlet-name>
        <url-pattern>/gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGifServlet</servlet-name>
        <url-pattern>/add-gif</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Database</description>
        <res-ref-name>jdbc/db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
